<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="2.0" xmlns:fx="http://javafx.com/fxml" fx:controller="cloud.LoginPanelController">

    <HBox spacing="10" alignment="CENTER" maxWidth="Infinity">
        <TextField fx:id="loginField" promptText="login"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <PasswordField fx:id="passwordField" promptText="password"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>

    <VBox spacing="5" alignment="CENTER" maxWidth="200">
        <Button maxWidth="Infinity" text="Login" onAction="#loginButtonAction" focusTraversable="false"
                HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Registration" onAction="#registrationButtonAction" focusTraversable="false"
                HBox.hgrow="ALWAYS"/>
        <Button maxWidth="Infinity" text="Exit" onAction="#exitButtonAction" focusTraversable="false"
                HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label fx:id="errorLabel"/>

</VBox>
