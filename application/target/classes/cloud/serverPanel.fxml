<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.202-ea"
      fx:controller="cloud.ServerPanelController">

    <HBox>
        <TextField fx:id="serverPanelPathField" editable="false" HBox.hgrow="ALWAYS"/>
        <Button fx:id = "serverPanelButtonUp" text="UP" onAction="#serverPanelButtonUpAction"/>
        <Button fx:id="serverPanelButtonCreateNewDirectory" text="NewDirectory" onAction="#serverPanelButtonCreateNewDirectory"/>
        <Button fx:id="serverPanelButtonRefresh" text="Refresh" onAction="#serverPanelButtonRefreshAction"/>
        <Button fx:id="serverPanelButtonGoToTheRootDir" text="goToTheRootDir" onAction="#serverPanelButtonGoToTheRootDir"/>
    </HBox>
    <TableView fx:id="serverPanelFilesTable" VBox.vgrow="ALWAYS"/>

</VBox>